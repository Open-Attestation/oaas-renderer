{
    "name": "oaas-renderer",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@govtechsg/decentralized-renderer-react-components": "^3.8.0",
        "@govtechsg/open-attestation": "^6.5.2",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/luxon": "^3.1.0",
        "@types/node": "^16.11.47",
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.9",
        "@types/react-test-renderer": "^18.0.0",
        "@types/styled-components": "^5.1.25",
        "add": "^2.0.6",
        "ajv": "^8.11.2",
        "ajv-formats": "^2.1.1",
        "crypto-browserify": "^3.12.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "json-schema-to-typescript": "^11.0.2",
        "lint-staged": "^13.1.0",
        "luxon": "^3.1.1",
        "prettier": "^2.8.1",
        "react": "^18.2.0",
        "react-app-rewired": "^2.2.1",
        "react-dom": "^18.2.0",
        "react-helmet-async": "^1.3.0",
        "react-scripts": "5.0.1",
        "react-test-renderer": "^18.2.0",
        "stream-browserify": "^3.0.0",
        "styled-components": "^5.3.6",
        "typescript": "^4.9.3",
        "web-vitals": "^2.1.4",
        "yarn": "^1.22.19"
    },
    "scripts": {
        "dev": "ts-node --project src/__development__/tsconfig.json src/__development__/prepare.ts && concurrently \"BROWSER=none react-app-rewired start\" \"PORT=3001 IS_PREVIEW_APP=true react-app-rewired start\"",
        "build": "run() { ISSUER_ID=$1 react-app-rewired build; }; run",
        "test": "react-scripts test --watchAll=false",
        "test:watch": "react-scripts test",
        "eject": "react-scripts eject",
        "lint": "eslint ./src",
        "lint:fix": "eslint ./src --fix",
        "lint-staged": "lint-staged",
        "typecheck": "tsc --noEmit",
        "process:schemas": "npx ts-node src/__internal__/process-schemas.ts && npx prettier --write src/**/__generated__/*.schema.{json,d.ts}",
        "process:images": "npx ts-node src/__internal__/process-to-hash-images.ts && npx prettier --write src/**/__generated__/*[!.d].ts",
        "process:headers": "npx ts-node src/__internal__/process-headers.ts",
        "new:template": "run() { npx hygen template new --issuerId $1 --docType $2; yarn process:schemas; }; run",
        "prepare": "husky install"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "prettier"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "change-case": "^4.1.2",
        "concurrently": "^7.6.0",
        "cz-conventional-changelog": "3.3.0",
        "jest-styled-components": "^7.1.0"
    },
    "jest": {
        "moduleNameMapper": {
            "^.+&.+\\.svg$": "<rootDir>/hashed-svg-stub.js"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
